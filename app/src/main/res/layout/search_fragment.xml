<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@color/colorGreen">
        <ImageView
            android:id="@+id/ivRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_white_24dp_restaurant"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ivCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_white_24dp_cafe"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivATM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_white_24dp_atm"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivPetrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_white_24dp_petrol"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_white_24dp_education"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_more_white_24dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>